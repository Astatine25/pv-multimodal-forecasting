# Import libraries
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
import os

# Load dataset
data_path = '../data/raw/pv_power_data.csv'
df = pd.read_csv(data_path, parse_dates=['timestamp'])

# Preview data
df.head()

# Basic stats
df.describe()

# Check missing values
df.isnull().sum()

# Visualize PV power over time
plt.figure(figsize=(12,5))
plt.plot(df['timestamp'], df['power'], label='PV Power')
plt.xlabel('Time')
plt.ylabel('Power (kW)')
plt.title('PV Power over Time')
plt.legend()
plt.show()

# Correlation heatmap with weather features
plt.figure(figsize=(8,6))
sns.heatmap(df.corr(), annot=True, cmap='coolwarm')
plt.title('Feature Correlation')
plt.show()

