# 02_preprocessing.ipynb
import pandas as pd
import numpy as np
from sklearn.preprocessing import MinMaxScaler
from sklearn.model_selection import train_test_split
import os

# Load raw data
data_path = '../data/raw/pv_power_data.csv'
df = pd.read_csv(data_path, parse_dates=['timestamp'])

# Fill missing values
df.fillna(method='ffill', inplace=True)

# Feature engineering
df['hour'] = df['timestamp'].dt.hour
df['day'] = df['timestamp'].dt.day
df['month'] = df['timestamp'].dt.month

# Scale features
scaler = MinMaxScaler()
scaled_features = scaler.fit_transform(df[['power','temperature','irradiance','humidity']])
df_scaled = pd.DataFrame(scaled_features, columns=['power','temperature','irradiance','humidity'])
df_scaled['timestamp'] = df['timestamp']
df_scaled['hour'] = df['hour']
df_scaled['day'] = df['day']
df_scaled['month'] = df['month']

# Split data
train, test = train_test_split(df_scaled, test_size=0.2, shuffle=False)

# Save processed data
os.makedirs('../data/processed', exist_ok=True)
train.to_csv('../data/processed/train.csv', index=False)
test.to_csv('../data/processed/test.csv', index=False)

